#include <stdio.h>

int main(void) 
{
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    int n;
	    scanf("%d",&n);
	    int arr[n];
	    for(int i=0;i<n;i++)
	    {
	        scanf("%d",&arr[i]);
	    }
	    int s=0;
	    for(int i=0;i<n;i++)
	    {
	        s += arr[i];
	    }
	    if(s%2==0 || n==1)
	    {
	        printf("1\n");
	    }
	    else
	    {
	        printf("2\n");
	    }
	}
	return 0;
}

