https://www.codechef.com/problems/ENDSORTED
#include <stdio.h>
#include <string.h>

int main() 
{
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    char str[100000];
	    scanf("%s",str);
	    int count=0;
	    for(int i=0;i<strlen(str);i++)
	    {
	        if(str[i]=='<' && str[i+1]=='>')
	        {
	            count++;
	        }
	    }
	    printf("%d\n",count);
	}
	return 0;
}
