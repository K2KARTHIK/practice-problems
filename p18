#include <stdio.h>

int main(void) {
	int t;
	scanf("%d",&t);
	while (t--)
	{
	    int n,a=0,b=0;
	    scanf("%d",&n);
	    
	    char s[n];
	    scanf("%s",&s);
	    
	    for(int i=0;i<n;i++)
	    {
	        if (s[i]=='1')
	        {
	            a++;
	        }
	        if (s[i]=='0')
	        {
	            b++;
	        }
	    }
	    if (a<=b)
	    {
	        printf("%d\n",a);
	    }
	    else
	    {
	        printf("%d\n",b+1);
	    }
	}
	return 0;
}
