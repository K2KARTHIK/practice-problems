#include <stdio.h>

int main(void) 
{
	// your code goes here
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    int n,m;
	    scanf("%d %d",&n,&m);
	    int a,b;
	    if(n%2==0 && m%2==0)
	    {
	       a=n/2;
	       b=m/2;
	       printf("%d\n",a*b);
	    }
	    else if(n%2!=0 && m%2!=0)
	    {
	       a=(n/2)+1;
	       b=(m/2)+1;
	       printf("%d\n",a*b);
	    }
	    else if(n%2!=0 && m%2==0)
	    {
	       a=(n/2)+1;
	       b=m/2;
	       printf("%d\n",a*b);
	    }
	    else if(n%2==0 && m%2!=0)
	    {
	       a=n/2;
	       b=(m/2)+1;
	       printf("%d\n",a*b);
	    }
	    
	    
	}

}

