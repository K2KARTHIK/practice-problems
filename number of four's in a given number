#include <stdio.h>
int main ()
{
    int n ;
    int c=0;
    int dig;
    printf("enter a number n : ");
    scanf("%d", &n);
    int t=n;
    while (n>0)
    {
        dig = n%10;
        if (dig==4)
        c++;
        n=n/10;
    }
    printf("the number 4 is repeated %d times",c);
    return 0;
}
