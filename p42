https://www.codechef.com/problems/STRP?tab=statement
#include <stdio.h>

int main(void) 
{
	int t;
	scanf("%d",&t);
	while(t--)
	{
	    int n;
	    
	    scanf("%d",&n);
	    int a=n;
	    char str[n];
	    scanf("%s",&str);
	    for(int i=0;i<n-1;i++)
	    {
	        if(str[i]==str[i+1])
	        {
	            a=a-1;
	            i=i+2;
	        }
	        else if(str[i]!=str[i+1])
	        {
	            continue;
	        }
	        
	    }
	    printf("%d\n",a);
	    
	}

}

